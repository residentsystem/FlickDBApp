@page "/"

@inject NavigationManager UriHelper

@using FlickDB.Pages.Posters;
@using FlickDB.Pages.Genres;

<PageTitle>FlickDB - Home</PageTitle>

<div class="container my-5">
    <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-sm home">
        <div class="col-lg-3 p-2 p-lg-2 pt-lg-2">
            <h1 class="display-4 ms-5 fw-bold lh-1 text-body-emphasis">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-film" viewBox="0 0 16 16">
                    <path d="M0 1a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V1zm4 0v6h8V1H4zm8 8H4v6h8V9zM1 1v2h2V1H1zm2 3H1v2h2V4zM1 7v2h2V7H1zm2 3H1v2h2v-2zm-2 3v2h2v-2H1zM15 1h-2v2h2V1zm-2 3v2h2V4h-2zm2 3h-2v2h2V7zm-2 3v2h2v-2h-2zm2 3h-2v2h2v-2z"/>
                </svg>
                Flick<span class="strong blue">DB</span>
            </h1>
            <p class="lead ms-5">Store your <span class="strong blue">movie</span> collection.</p>
            <a class="btn btn-dark btn-lg ms-5 px-4 gap-3" href="/poster">Enter</a>
        </div>
        <div class="col-lg-7 mb-5 p-0 offset-md-2 overflow-hidden">
            <img class="rounded-lg-3 poster" src="/images/home/flickdb.jpg" width="900" height="600" alt="FlickDB Poster">
        </div>
    </div>
</div>

<div class="px-4 py-5 my-5 text-center">
    <img class="d-block mx-auto mb-4" src="/images/home/imdb.jpg" width="120" height="61" alt="IMDB Logo">
    <h2 class="display-5 fw-bold text-body-emphasis">The Internet Movie Database</h2>
    <div class="col-lg-6 mx-auto">
        <figure>
            <blockquote class="blockquote">
                <p class="lead mb-4">The Internet Movie Database (IMDb) is an online database of information related to films, television series, podcasts, home videos, video games, and streaming content online - including cast, production crew and personal biographies, plot summaries, trivia, ratings, and fan and critical reviews.</p>
            </blockquote>
            <figcaption class="blockquote-footer">
                <cite title="Source Title">Wikipedia</cite>
            </figcaption>
        </figure>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a type="button" class="btn btn-primary btn-lg px-4 gap-3" href="https://www.imdb.com" target="_blank">All Movies</a>
            <a type="button" class="btn btn-outline-secondary btn-lg px-4" href="https://www.imdb.com/chart/top" target="_blank">Top 250 Movies</a>
        </div>
    </div>
</div>

