@page "/showposter"

@inject MovieContext Database
@inject NavigationManager UriHelper

@if (Movie != null)
{
    // -------------------------------------------- Posters --------------------------------------------

    <div class="col">
        <div class="card shadow-sm">
            <img class="poster" src="/images/poster/@Movie.Poster" alt="@Movie.Title" />
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary" @onclick="OnClick">View</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                    </div>
                    <small class="text-body-secondary">@Movie.Duration mins</small>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>Movie not found.</p>
}

@code {
    [Parameter]
    public int MovieId { get; set; }

    public Movie? Movie { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (Database.Movies != null)
            Movie = await Database.Movies.FindAsync(MovieId);
    }

    private void OnClick()
    {
        UriHelper.NavigateTo($"ShowMovie/{MovieId}");
    }
}